{
  "name": "xdsmjs",
  "version": "0.4.3",
  "description": "XDSM diagram generator",
  "main": "xdsm-main.js",
  "directories": {
    "example": "examples"
  },
  "scripts": {
    "lint": "eslint xdsm-main.js ./src/* || true",
    "build": "webpack --config webpack.config.js",
    "postbuild": "uglifyjs ./build/xdsm.bundle.js > ./build/xdsm.bundle.min.js",
    "test": "babel-tape-runner test/xdsm-test.js | faucet",
    "testall": "testem || true"
  },
  "repository": "git+https://github.com/OneraHub/XDSMjs.git",
  "keywords": [
    "XDSM",
    "MDO"
  ],
  "author": "Remi Lafage",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/OneraHub/XDSMjs/issues"
  },
  "homepage": "https://github.com/OneraHub/XDSMjs#readme",
  "devDependencies": {
    "babel-core": "^6.24.1",
    "babel-loader": "^7.0.0",
    "babel-preset-env": "^1.4.0",
    "babel-tape-runner": "^2.0.1",
    "eslint": "^3.19.0",
    "eslint-config-google": "^0.7.1",
    "faucet": "0.0.1",
    "tape": "^4.5.1",
    "testem": "^1.16.1",
    "uglify-js": "^2.7.5",
    "webpack": "^2.5.1"
  },
  "dependencies": {
    "d3": "^4"
  },
  "eslintConfig": {
    "extends": [
      "google"
    ],
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module"
    },
    "env": {
	  "commonjs":true,
      "es6": true
    },
    "rules": {
      "max-len": [
        "error",
        120
      ],
      "quotes": "off",
      "no-var": "off",
      "linebreak-style": "off",
      "require-jsdoc": "off",
      "brace-style": "off"
    }
  }
}
